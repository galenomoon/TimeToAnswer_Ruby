<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Listando Assuntos/Áreas</h1>
  </div>
</div>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr> 
      <th style="text-align: center">#</th>
      <th>Descrição</th>
      <th style="text-align: center"> 

      <%= link_to new_admins_backoffice_subject_path, type:"button", class:"btn btn-success btn-circle" do  %>
        <i class="fa fa-plus"> </i>
      <% end %>


      </th>
    </tr>
  </thead>
  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td style="text-align: center"> <%= subject.id %> </td>
        <td> <%= subject.description %> </td>
        <td style="text-align: center; width:100px">
    
          <%= link_to edit_admins_backoffice_subject_path(subject), type:"button", class:"btn btn-primary btn-circle" do  %>
            <i class="fa fa-edit"> </i>
          <% end %>

           <%= link_to admins_backoffice_subject_path(subject), method: :delete, data: {confirm: "Deseja Realmente Excluir este Assunto/Área?"}, type:"button", class:"btn btn-danger btn-circle" do  %>
            <i class="fa fa-minus"></i>
          <% end %>
      
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="text-center">
<%= paginate @subjects %>
</div>
