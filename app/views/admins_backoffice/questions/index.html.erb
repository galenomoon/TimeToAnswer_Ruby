<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
    <%= t('messages.listing', model: @questions.model_name.human(count: 2) ) %>
    </h1>
  </div>
</div>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr> 
      <th style="text-align: center">#</th>
      <th><%= translate_field(@questions, :description) %></th>
      <th><%= translate_field(@questions, :subject) %></th>
      <th style="text-align: center"> 

      <%= link_to new_admins_backoffice_question_path, type:"button", class:"btn btn-success btn-circle" do  %>
        <i class="fa fa-plus"> </i>
      <% end %>


      </th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td style="text-align: center"> <%= question.id %> </td>
        <td> <%= sanitize question.description.truncate(50) %> </td>
        <td> <%= question.subject.description.truncate(30) %> </td>
        <td style="text-align: center; width:100px">
    
          <%= link_to edit_admins_backoffice_question_path(question), type:"button", class:"btn btn-primary btn-circle" do  %>
            <i class="fa fa-edit"> </i>
          <% end %>

           <%= link_to admins_backoffice_question_path(question), method: :delete, data: {confirm: "Deseja Realmente Excluir esta Pergunta?"}, type:"button", class:"btn btn-danger btn-circle" do  %>
            <i class="fa fa-minus"></i>
          <% end %>
      
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="text-center">
<%= paginate @questions %>
</div>
