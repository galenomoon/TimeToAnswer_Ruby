<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Listando Administradores</h1>
  </div>
</div>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr> 
      <th style="text-align: center">#</th>
        <th><%= translate_field(@admins, :email) %></th>
      <th style="text-align: center"> 

      <%= link_to new_admins_backoffice_admin_path, type:"button", class:"btn btn-success btn-circle" do  %>
        <i class="fa fa-plus"> </i>
      <% end %>


      </th>
    </tr>
  </thead>
  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td style="text-align: center"> <%= admin.id %> </td>
        <td> <%= admin.email %> </td>
        <td style="text-align: center; width:100px">
    
          <%= link_to edit_admins_backoffice_admin_path(admin), type:"button", class:"btn btn-primary btn-circle" do  %>
            <i class="fa fa-edit"> </i>
          <% end %>

           <%= link_to admins_backoffice_admin_path(admin), method: :delete, data: {confirm: "Deseja Realmente Excluir o Administrador: #{admin.email} ?"}, type:"button", class:"btn btn-danger btn-circle" do  %>
            <i class="fa fa-minus"></i>
          <% end %>
      
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="text-center">
<%= paginate @admins %>
</div>
