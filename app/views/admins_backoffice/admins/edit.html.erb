<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Editando Administradores</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Basic Form Elements
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">

                        <%= form_with(model: [:admins_backoffice, @admin], local: true) do |form|%>
                        <div class="form-group">

                            <%= form.label :email %>
                            <%= form.text_field :email, class:"form-control", pleaceholder:"Email do Administrador" %>

                            </div>
                            <div class="form-group">
                                <%= form.label :password %>
                                <%= form.text_field :password, class:"form-control", pleaceholder:"Senha do Administrador" %>
                            </div>
                            <div class="form-group">
                                <%= form.label :password_confirmation %>
                                <%= form.text_field :password_confirmation, class:"form-control", pleaceholder:"Confirmação da Senha do Administrador" %>
                              </div>
                                <button type="submit" class="btn btn-default">Salvar</button>
                            <% end %>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
